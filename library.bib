journal = {PLoS Genet},
number = {12},
pages = {1002447},
title = {{DNA Methylation of the Gonadal Aromatase (cyp19a) Promoter Is Involved in Temperature-Dependent Sex Ratio Shifts in the European Sea Bass}},
