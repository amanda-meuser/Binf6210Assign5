issn = {21566941},
journal = {Journal of Freshwater Ecology},
keywords = {Campostoma,Nocomis,microhabitat,nest association,spawning},
number = {2},
pages = {251--259},
title = {{Nesting microhabitat comparison of Central stoneroller and Bluehead chub: potential inference for host-switching by nest associates}},
